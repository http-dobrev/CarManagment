@model IEnumerable<CarManagment.Models.CarViewModel>
@{
    ViewData["Title"] = "Cars";
}

<h1>Cars</h1>
<p>
    <a asp-action="Create" class="btn btn-primary">Add Car</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Brand</th>
            <th>Model</th>
            <th>Year</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Brand</td>
                <td>@c.Model</td>
                <td>@c.Year</td>
                <td>€ @c.Price</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                    <form asp-action="Delete" asp-route-id="@c.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this car?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>